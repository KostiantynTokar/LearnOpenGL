{
    "name": "glsu",
    "sourcePaths": [
        "source"
    ],
    "importPaths": [
        "source",
        "source/glsu"
    ],
	"toolchainRequirements": {
		"dmd": "no",
		"gdc": "no",
		"ldc": ">=1.24.0-beta1"
	},
    "dependencies": {
        "gfm": "~>8.0.3",
        "imagefmt": "~>2.1.0",
        "bindbc-glfw": "~>0.10.0",
        "learn-opengl:stringalloc": "*"
    },
    "subConfigurations": {
        "bindbc-glfw": "static"
    },
    "buildTypes": {
        "unittest-opt": {
            "buildOptions": ["unittests", "optimize", "inline"]
        }
    },
    "dflags": ["-preview=in", "-preview=dip1000"],
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "targetName": "glsu-unittest",
            "mainSourceFile": "source/app.d",
            "preGenerateCommands-windows": ["echo void main(){} > source\\app.d"],
            "postBuildCommands-windows": ["del source\\app.d"],
            "dflags-windows": ["-mscrtlib=ucrt"],
            "debugVersions": ["glChecks"],
			"libs-windows": ["opengl32", "dependencies/x64-Debug/glfw3"]
        }
    ],
	"-ddoxFilterArgs": ["--min-protection=Private", "--ex=glad"]
}