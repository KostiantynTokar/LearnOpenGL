{
	"name": "learn-opengl",
	"targetType": "executable",
    "platforms": [
        "windows"
    ],
	"dependencies": {
		"gfm": "~>8.0.3",
		"imagefmt": "~>2.1.0",
		"bindbc-glfw": "~>0.10.0"
	},
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"dflags": [
		"-mscrtlib=ucrt"
	],
	"libs": [
		"opengl32"
	],
	"toolchainRequirements": {
		"dmd": "no",
		"gdc": "no",
		"ldc": ">=1.22.0"
	},
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"],
			"libs": ["E:\\repos\\libs\\glfw-3.3.2\\out\\build\\x64-Debug\\src\\glfw3"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs": ["E:\\repos\\libs\\glfw-3.3.2\\out\\build\\x64-Release\\src\\glfw3"]
		}
	}
}