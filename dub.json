{
	"name": "learn-opengl",
    "platforms": [
        "windows"
	],
	"sourcePaths": [
		"source"
	],
	"importPaths": [
		"source"
	],
	"dependencies": {
		"learn-opengl:glsu": "*",
		"learn-opengl:stringalloc": "*",
        "automem": "~>0.6.4",
        "emsi_containers": "~>0.8.0",
		"unit-threaded": "~>1.0.11",
		"std_benchmark": "~>0.3.3",
		"gfm": "~>8.0.3",
		"bindbc-glfw": "~>0.10.0"
	},
	"subPackages": [
		"glsu",
		"stringalloc"
	],
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"dflags": ["-preview=in", "-preview=dip1000"],
	"dflags-windows": ["-mscrtlib=ucrt"],
	"libs": [
		"opengl32"
	],
	"toolchainRequirements": {
		"dmd": "no",
		"gdc": "no",
		"ldc": ">=1.24.0-beta1"
	},
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"],
            "debugVersions": ["glChecks"],
			"libs-windows": ["dependencies/x64-Debug/glfw3"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs-windows": ["dependencies/x64-Release/glfw3"]
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
            "debugVersions": ["glChecks"],
			"libs-windows": ["dependencies/x64-Debug/glfw3"]
		},
		"unittest-opt": 
		{
			"buildOptions": ["unittests", "optimize", "inline"],
			"libs-windows": ["dependencies/x64-Release/glfw3"]
		}
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable"
		}
	],
	"-ddoxFilterArgs": ["--min-protection=Private"]
}