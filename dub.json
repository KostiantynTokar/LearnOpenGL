{
	"name": "learn-opengl",
    "platforms": [
        "windows"
    ],
	"dependencies": {
		"gfm": "~>8.0.3",
		"imagefmt": "~>2.1.0",
		"bindbc-glfw": "~>0.10.0"
	},
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"subPackages": [
		{
			"name": "glsu",
			"importPaths": [
				"glsu"
			],
			"dependencies": {
				"gfm": "~>8.0.3",
				"imagefmt": "~>2.1.0",
				"bindbc-glfw": "~>0.10.0"
			}
		}
	],
	"dflags": [
		"-mscrtlib=ucrt"
	],
	"libs": [
		"opengl32"
	],
	"toolchainRequirements": {
		"dmd": "no",
		"gdc": "no",
		"ldc": ">=1.22.0"
	},
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"],
			"dflags-dmd": ["-debug=glChecks"],
			"dflags-ldc": ["--d-debug=glChecks"],
			"libs": ["dependencies\\x64-Debug\\glfw3"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"libs": ["dependencies\\x64-Release\\glfw3"]
		},
		"docs": {
			"buildOptions": ["syntaxOnly"],
			"dflags": ["-c", "-Dddocs", "-op"]
		}
	}
}