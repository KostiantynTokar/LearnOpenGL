{
	"name": "learn-opengl",
    "platforms": [
        "windows"
	],
	"sourcePaths": [
		"source/glsu"
	],
	"importPaths": [
		"source/glsu"
	],
	"dependencies": {
		"automem": "~>0.6.4",
		"learn-opengl:stringalloc": "*",
        "imagefmt": "~>2.1.0",
		"gfm": "~>8.0.3",
		"bindbc-glfw": "~>0.10.0"
	},
	"subPackages": [
		"stringalloc"
	],
	"subConfigurations": {
		"bindbc-glfw": "static"
	},
	"dflags": [
		"-preview=in",
		"-preview=dip25",
		"-preview=dip1000",
		"-preview=dip1008"
	],
	"toolchainRequirements": {
		"dmd": "no",
		"gdc": "no",
		"ldc": ">=1.24.0-beta1"
	},
	"buildTypes": {
		"debug-app": {
			"buildOptions": ["debugMode", "debugInfo"],
            "debugVersions": ["glChecks"],
			"dflags-windows": ["-mscrtlib=ucrt"],
			"libs-windows": ["opengl32", "dependencies/x64-Debug/glfw3"]
		},
		"debug-lib": {
			"buildOptions": ["debugMode", "debugInfo"],
            "debugVersions": ["glChecks"]
		},
		"release-app": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"dflags-windows": ["-mscrtlib=ucrt"],
			"libs-windows": ["opengl32", "dependencies/x64-Release/glfw3"]
		},
		"release-lib": {
			"buildOptions": ["releaseMode", "optimize", "inline"]
		},
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"],
            "debugVersions": ["glChecks"],
			"dflags-windows": ["-mscrtlib=ucrt"],
			"libs-windows": ["opengl32", "dependencies/x64-Debug/glfw3"]
		},
		"unittest-opt": 
		{
			"buildOptions": ["unittests", "optimize", "inline"],
			"dflags-windows": ["-mscrtlib=ucrt"],
			"libs-windows": ["opengl32", "dependencies/x64-Release/glfw3"]
		}
	},
	"configurations": [
		{
			"name": "application",
			"targetType": "executable",
			"sourcePaths": ["source/app"],
			"importPaths": ["source/app"],
			"dependencies": {
				"unit-threaded": "~>1.0.11",
				"std_benchmark": "~>0.3.3"
			}
		},
		{
			"name": "library",
			"targetType": "library",
			"targetName": "glsu"
		},
		{
			"name": "unittest-lib-only",
			"targetType": "executable",
			"targetName": "glsu-unittest",
            "mainSourceFile": "source/glsu/app.d",
            "preGenerateCommands-windows": ["echo void main(){} > source\\glsu\\app.d"],
            "postBuildCommands-windows": ["del source\\glsu\\app.d"]
		}
	],
	"-ddoxFilterArgs": ["--min-protection=Private", "--ex=glad"]
}